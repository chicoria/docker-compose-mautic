
# REDIRECIONA HTTP PARA HTTPS (opcional, pode remover se ainda não usar HTTPS)
server {
    listen 80;
    server_name DOMAIN_NAME m.DOMAIN_NAME;
    return 301 https://$host$request_uri;
}

######################################
# DOMAIN_NAME → proxy transparente para m.DOMAIN_NAME
######################################
server {
    listen 443 ssl;
    server_name DOMAIN_NAME;

    ssl_certificate /etc/letsencrypt/live/DOMAIN_NAME/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/DOMAIN_NAME/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Regra para a raiz: /
    location = / {
        proxy_pass http://m.DOMAIN_NAME/home;
        proxy_set_header Host m.DOMAIN_NAME;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect http://m.DOMAIN_NAME/ /;
    }

    # Regra para qualquer outro caminho
    location / {
        proxy_pass http://m.DOMAIN_NAME$request_uri;
        proxy_set_header Host m.DOMAIN_NAME;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect http://m.DOMAIN_NAME/ /;
    }

    location ~ /\.ht {
        deny all;
    }

    error_log /var/log/nginx/superare_error.log;
    access_log /var/log/nginx/superare_access.log;
}

######################################
# m.DOMAIN_NAME → Mautic (localhost:8001)
######################################
server {
    listen 443 ssl;
    server_name m.DOMAIN_NAME;

    ssl_certificate /etc/letsencrypt/live/m.DOMAIN_NAME/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/m.DOMAIN_NAME/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://localhost:8001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location ~ /\.ht {
        deny all;
    }

    error_log /var/log/nginx/m_superare_error.log;
    access_log /var/log/nginx/m_superare_access.log;
}
